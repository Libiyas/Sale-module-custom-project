<odoo>
    <record id="sale_settings_form_inherit" model="ir.ui.view">
        <field name="name">sale.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sales']" position="inside">
                <group>
                    <field name="sale_order_limit"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>